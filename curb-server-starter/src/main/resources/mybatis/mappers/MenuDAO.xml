<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="curb.server.dao.MenuDAO">

    <sql id="tablename">curb_menu</sql>

    <select id="get" resultType="String">
        SELECT menu FROM
        <include refid="tablename"/>
        WHERE app_id = #{appId}
    </select>

    <insert id="insert">
        INSERT INTO
        <include refid="tablename"/>
        (
        app_id, `menu`, create_time, update_time
        )
        VALUES (
        #{appId}, #{menu}, NOW(), NOW()
        )
    </insert>

    <update id="update">
        UPDATE
        <include refid="tablename"/>
        SET
        `menu` = #{menu},
        update_time = NOW()
        WHERE app_id = #{appId}
    </update>

    <delete id="delete">
        DELETE FROM
        <include refid="tablename"/>
        WHERE app_id = #{appId}
    </delete>
</mapper>